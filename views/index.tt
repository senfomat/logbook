<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>[% appconfig.title %]</title>
	<link rel="stylesheet" href="components/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
	<main>
		<div class="container">
			<h1>[% appconfig.title %]</h1>
			<div id="v-app">
				<p class="lead">
					<button @click="createlogentry()" class="btn btn-primary">Neuer Eintrag</button>
				</p>
				<table class="table table-bordered table-condensed table-hover table-striped">
					<tr>
						<th>Datum</th>
						<th>Title</th>
						<th>Description</th>
						<th>Author</th>
						<th>Kategorien</th>
						<th></th>
					</tr>
					<tr v-for="logentry in logentries" is="logentry" :logentry="logentry" :categories="categories"></tr>
				</table>
				<pre>{{ $data }}</pre>
			</div>
		</div>
	</main>

	<template id="template-logentry-raw">
		<tr>
			<td class="col-md-1">
				<span v-if="!logentry.editing" :title="logentry.edate | formatDatetimeFull">{{logentry.edate | formatDatetimeShort }}
					</span>
				<span v-else>
					<input type="text" v-model="logentry.edate" class="form-control">
						</input>
				</span>
			</td>
			<td class="col-md-2">
				<input v-if="logentry.editing" v-model="logentry.title" class="form-control">
					</input>
				<span v-else>
					{{logentry.title}}
				</span>
			</td>
			<td class="col-md-3">
				<textarea v-if="logentry.editing" v-model="logentry.description" class="form-control">
					</textarea>
				<span v-else>
					{{logentry.description}}
				</span>
			</td>
			<td class="col-md-1">
				<input v-if="logentry.editing" v-model="logentry.author" class="form-control">
					</input>
				<span v-else>
					{{logentry.author}}
				</span>
			</td>
			<td class="col-md-1">
				<span v-if="!logentry.editing">
					<span v-for="(undef, category_id) in logentry.categories">
						<button class="btn btn-default btn-xs">{{ getCategory(category_id).title }}</button>
					</span>
				</span>
				<span v-else>
					<ul>
						<li v-for="category in categories">
							<button @click="toggleCategory(logentry, category)" :bind="logentry" class="btn btn-default btn-xs" :title="category.description">{{category.title}}</button>
						</li>
					</span>
				</span>
			</td>
			<td class="col-md-1">
				<div class="btn-group" v-if="logentry.editing">
					<span v-if="logentry.entry_id">
						<button @click="updatelogentry(logentry)" class="btn btn-primary btn-xs">Update logentry</button>
						<button @click="deletelogentry(logentry)" class="btn btn-danger btn-xs">Delete</button>
					</span>
					<span v-else>
						<button @click="storelogentry(logentry)" class="btn btn-success btn-xs">Save New logentry</button>
					</span>

					<button @click="cancelEditNewlogentry(logentry)" class="btn btn-default btn-xs">Cancel</button>
				</div>
				<div class="btn-group" v-else>
					<button @click="editlogentry(logentry)" class="btn btn-default btn-sm glyphicon glyphicon-pencil" title="Edit"></button>
				</div>
			</td>
		</tr>
	</template>

	<script src="components/vue/dist/vue.js"></script>
	<script src="components/vue-resource/dist/vue-resource.js"></script>
	<script src="components/moment/min/moment-with-locales.min.js"></script>
	<script src='static/app.js' type="text/javascript"></script>
</body>
</html>
